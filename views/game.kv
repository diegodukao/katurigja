#:kivy 1.9.1

<Game>:
    world: world
    menu: menu
    band_overview: band_overview
    action_overview: action_overview

    World:
        id: world
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        Button:
            id: menu
            text: "Menu"
            size: 4*dp(15), 4*dp(15)
            size_hint: (None, None)
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        Button:
            id: band_overview
            text: "Band"
            size: 4*dp(15), 4*dp(15)
            size_hint: (None, None)
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        Button:
            id: action_overview
            text: "Action"
            size: 4*dp(15), 4*dp(15)
            size_hint: (None, None)
